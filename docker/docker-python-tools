FROM python:3.7-stretch
ENV PATH=/root/.local/bin:$PATH
ENV PYTHONPATH=/home
ENV KAFKA_APIKEY=""
ENV KAFKA_BROKERS=""
ENV KAFKA_CERT="/opt/app-root/src/es-cert.pem"
ENV KAFKA_ENV="IBMCLOUD"
ENV POSTGRES_PWD="postgres"
ENV POSTGRES_USER="postgres"
ENV POSTGRES_HOST="localhost"
ENV POSTGRES_URL="postgres://prostgres:supersecret@localhost:5432/postgres"
ENV POSTGRES_DBNANE="postgres"
ENV POSTGRES_PORT=5432

WORKDIR /home

RUN pip install --upgrade pip \
  && pip install --user pipenv requests black sklearn pytest numpy psycopg2 pandas confluent_kafka asyncio flask scipy matplotlib
CMD bash $@


